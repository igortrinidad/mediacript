{
  "name": "mediacript",
  "version": "1.0.4",
  "description": "CLI to convert media files to performat formats and extract text using Groq and OpenAI's Whisper API",
  "type": "module",
  "bin": {
    "mediacript": "./cli.mjs",
    "mediacript-convert": "./convert.js"
  },
  "files": [
    "dist",
    "cli.mjs",
    "convert.js",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/igortrinidad/mediacript.git"
  },
  "bugs": {
    "url": "https://github.com/igortrinidad/mediacript/issues"
  },
  "homepage": "https://github.com/igortrinidad/mediacript#readme",
  "scripts": {
    "convert": "node convert.js",
    "start": "node --loader ts-node/esm src/index.ts",
    "build": "tsc && chmod +x dist/index.js && chmod +x cli.mjs",
    "dev": "node --loader ts-node/esm --watch src/index.ts",
    "prepublishOnly": "npm run build"
  },
  "engines": {
    "node": ">=16"
  },
  "dependencies": {
    "axios": "^1.13.4",
    "dotenv": "^17.2.3",
    "form-data": "^4.0.5",
    "inquirer": "^8.2.6",
    "openai": "^4.104.0"
  },
  "devDependencies": {
    "@types/inquirer": "^8.2.12",
    "@types/node": "^25.0.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
